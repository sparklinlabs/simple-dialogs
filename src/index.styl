* { box-sizing: border-box; }

html, body {
  height: 100%;
  margin: 0;
}

body {
  font-family: sans-serif;
  font-size: 14px;
  display: flex;
  flex-flow: column;
  background-color: #eee;
}

a { color: #00f; }
a:hover { text-decoration: none; }

body > header {
  padding: 1em;
  display: flex;
  align-items: center;
  h1, p { margin: 0; }
  p { margin-left: 1em; }
}

main {
  position: relative;
  background-color: #fff;
  border: 1px solid #888;
  flex: 1;
  margin: 0 1em;
  padding 1em;
  overflow-y: auto;
  
  button { margin-right: 2em; }
}

.dialog {
  width: 100%;
  height: 100%;
  z-index: 10;
  position: absolute;
  top: 0;
  left: 0;
  background-color: rgba(128,128,128,0.5);
  display: flex;

  form {
    background-color: white;
    margin: auto;
    padding: 10px;
    width: 450px;
    display: flex;
    flex-flow: column;
    box-shadow: 0 0 20px rgba(0,0,0,0.2);
  }

  header {
    text-transform: uppercase;
    font-size: 1.5em;
    margin-bottom: 0.5em;
  }

  .group { margin-bottom: 0.5em; }

  input, select { padding: 0.125em 0.25em; }

  .buttons {
    display: flex;
    justify-content: flex-end;

    > button, > .button-strip { margin-left: 5px; }
  }
}
